@page
@model WebApp.Pages.CheckersOptions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this? All linked games and states will be also deleted.</h3>

<div>
    <h4>CheckersOption</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.GameBoardHeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.GameBoardHeight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.GameBoardWidth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.GameBoardWidth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.WhitePieces)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.WhitePieces)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.BlackPieces)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.BlackPieces)
        </dd>
        <dt class="col-sm-2">
            Linked games
        </dt>
        <dd class="col-sm-10">
            @if (Model.CheckersOption.CheckersGames != null)
                {
                    @Model.CheckersOption.CheckersGames.Count()
                }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CheckersOption.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
